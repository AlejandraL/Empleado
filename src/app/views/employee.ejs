<% include header %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row">
    <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>EPS</th>
                <th>Discapacidad</th>
                <th>Cargo</th>
                <th>Acci√≥n</th>

            </tr>
            <% if (employee) { %>
            <% for (var i = 0; i < employee.length; i ++) { %>
            <tr>
                <td>
                    <%= employee[i].id_employee %>
                </td>
                <td>
                    <%= employee[i].name %>
                </td>
                <td>
                    <%= employee[i].age %>
                </td>
                <td>
                    <%= employee[i].health_service %>
                </td>
                <td>
                    <%= employee[i].disability %>
                </td>
                <td>
                    <%= employee[i].position %>
                </td>

                <td>
                    <a href="/employee/delete/<%= employee[i].id_employee %>" class="btn btn-danger">
                        <i class="fa fa-remove"></i></a>
                    <a href="/employee/update/<%= employee[i].id_employee %>" class="btn btn-info">
                        <i class="fa fa-edit"></i></a>

                </td>
            </tr>
            <% } %>
            <% } %>
        </table>
    </div>
    <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/employee/add" method="post">
            <h3 class="card-title">Crear empleado</h3>
            <div class="form-group">
                <input name="name" type="text" class="form-control" placeholder="Nombre empleado">
            </div>
            <div class="form-group">
                <input name="age" type="text" class="form-control" placeholder="Edad">
            </div>
            <div class="form-group">
                <input name="health_service" type="text" class="form-control" placeholder="EPS">
            </div>
            <div class="form-group">
                <input name="disability" type="text" class="form-control" placeholder="Discapacidad">
            </div>
            <div class="form-group">
                <input name="position" type="text" class="form-control" placeholder="Cargo">
            </div>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
</div>
<% include footer %>